page {
  height: 100%;
  background: rgb(247, 248, 250);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  color: black;
}

.page-body {
  padding-top: 10rpx;
  height: 100%;
  width: 100%;
}

.nav {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: -20rpx;
  position: relative;
}

.nav image {
  /* position: absolute;
  top: 10rpx; */
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
  margin-top: 8rpx;
  float: left;
}

.select-box {
  width: 205rpx;
  height: 60rpx;
  margin: 20rpx 0;
  position: relative;
  left: 500rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.select-box .select-item {
  width: 100rpx;
  height: 100%;
  text-align: center;
  font: 400 30rpx "黑体";
  line-height: 60rpx;
  border-radius: 10rpx;
  display: inline-block;
}

.discuss {
  position: relative;
  left: 50rpx;
  top: 180rpx;
  font: 700 40rpx "黑体";
}

.box {
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.hide {
  display: none;
}

.box .img {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  margin: 20rpx 40rpx;
  margin-right: 30rpx;
  overflow: hidden;
  float: left;
}

.box .name {
  width: 300rpx;
  font: 400 30rpx "黑体";
  margin-top: 20rpx;
  color: rgba(0,0,0,0.5);
  line-height: 60rpx;
  display: inline-block;
}

.box .title {
  width: 550rpx;
  height: 80rpx;
  margin: 0 40rpx;
  font: 700 40rpx "黑体";
  line-height: 80rpx;
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 超出隐藏 */
  text-overflow: ellipsis;
  /* 超出部分显示省略号 */
  float: left;
}

.box .hot {
  width: 50rpx;
  height: 50rpx;
  margin: 15rpx 0;
  margin-left: 50rpx;
  display: inline-block;
}

.box .label {
  width: 500rpx;
  margin: 5rpx 40rpx;
  font: 400 30rpx "黑体";
  color: grey;
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 超出隐藏 */
  text-overflow: ellipsis;
  /* 超出部分显示省略号 */
}

.box .tim {
  position: absolute;
  left: 520rpx;
  top: 160rpx;
  width: 200rpx;
  font: 400 25rpx "黑体";
  color: rgb(163, 178, 184);
}



.searchInput {
  border-top: 1rpx solid #68CCC5 !important;
  border-bottom: 1rpx solid #68CCC5 !important;
  /* background-color: #68CCC5 !important; */
}

