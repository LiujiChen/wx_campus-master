/* ********************富文本编辑器样式**************** */
@import "../common/lib/weui.wxss";
@import "../Post_forum/assets/iconfont.wxss";

.container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  /* height: 100%; */
}

.ql-container {
  background-color: #fff;
  box-sizing: border-box;
  width: 100%;
  min-height: 1000rpx;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}


/* ********************富文本编辑器样式**************** */

page {
  height: 100%;
  background-color: rgb(248, 248, 248);
}

.page-body {
  width: 100%;
  height: 100%;
}

.nav {
  width: 100%;
  height: 70rpx;
  font: 700 40rpx "黑体";
  line-height: 70rpx;
  margin-bottom: 20rpx;
}

.nav .left-box {
  width: 15rpx;
  height: 50rpx;
  margin: 10rpx 15rpx;
  border-radius: 25%;
  background-color: #68CCC5;
  float: left;
}

.title-box {
  width: 700rpx;
  height: 100rpx;
  margin: 20rpx auto;
}

.textarea {
  width: 700rpx;
  height: 1000rpx;
  margin: 20rpx auto;
  background-color: #fff;
  position: relative;
}

.btn {
  width: 450rpx;
  height: 70rpx;
  border-radius: 8rpx;
  background-color: #68CCC5;
  color: #fff;
  margin: 30rpx auto;
  font: 400rpx 40rpx "黑体";
  text-align: center;
  line-height: 70rpx;
}