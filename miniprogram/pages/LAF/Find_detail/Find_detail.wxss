/* pages/detail/detail.wxss */
page {
  height: 100%;
  width: 100%;
  background: rgb(248, 248, 248);
}

.page-body {
  padding-top: 30rpx;
  height: 100%;
  width: 100%;
}

.nav {
  width: 100%;
  height: 600rpx;
}

.nav .img {
  width: 420rpx;
  height: 560rpx;
  border-radius: 20rpx;
  display: block;
  margin: 10rpx auto;
  background-color: #fff;
  /* box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.3); */
}

.detail-box {
  width: 700rpx;
  height: 500rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  background-color: #fff;
}

.detail-box .recorder {
  width: 700rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  background-color: white;
  /* box-shadow: 2rpx 2rpx 2rpx 2rpx rgba(0, 0, 0, 0.1); */
  overflow: hidden;
  font: 400 36rpx "黑体";
  line-height: 80rpx;
  position: relative;
}

/* 每条记录左边的小图标 */
.detail-box  .recorder image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
  margin-top: 18rpx;
  float: left;
}

.detail-box .recorder .font {
  width: 600rpx;
  margin-left: 10rpx;
  display: inline-block;
}

