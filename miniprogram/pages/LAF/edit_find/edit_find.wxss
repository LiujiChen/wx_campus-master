/* 按钮 */
.btn {
  background-color: #68CCC5;
  width: 525rpx;
  height: 80rpx;
  margin: 50rpx auto;
  border-radius: 10rpx;
  text-align: center;
  font: 400 30rpx "黑体";
  line-height: 80rpx;
  color: white;
  /* box-shadow: 2rpx 2rpx 2rpx 2rpx rgba(0, 0, 0, 0.3); */
