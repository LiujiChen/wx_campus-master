page {
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  color: black;
}

.page-body {
  height: 100%;
  width: 100%;
}

.nav {
  width: 750rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: -5rpx;
  background-color: rgb(248, 248, 248);
}

.nav image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
  float: left;
}

.select {
  width: 750rpx;
  margin: 20rpx 0;
  overflow: hidden;
}

.select .box {
  width: 374rpx;
  background-color: #fff;
  /* border-right: 1rpx rgb(163, 178, 184) solid; */

  font: 400 35rpx "黑体";
  line-height: 70rpx;
  text-align: center;
  overflow: hidden;
  float: left;
  position: relative;
}

.image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  position: absolute !important;
  right: 20rpx;
  top: 20rpx;
}

.card {
  width: 100%;
  height: 250rpx;
  /* border-top: 1rpx solid rgba(0, 0, 0, 0.1) !important; */
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1) !important;
  background-color: #fff !important;
  border-style: none !important;
  margin: 20rpx 0;
  /* margin: 10rpx 0; */
}

.container {
  width: 750rpx;
  margin: 10rpx auto;
  overflow: hidden;
}

.container .box {
  width: 350rpx;
  height: 500rpx;
  margin: 10rpx 10rpx;
  border: 1rpx rgb(163, 178, 184) solid;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx rgba(0, 0, 0, 0.2);
  text-align: center;
  overflow: hidden;
  float: left;
}

.container .box image {
  width: 350rpx;
  height: 350rpx;
  margin: 10rpx auto;
  margin-bottom: 0;
  border-radius: 10rpx;

}

.container .box .information {
  width: 250rpx;
  margin-top: 0;
  color: black;
  font: 400 20rpx "黑体";
}

.container .box .price {
  width: 250rpx;
  margin-top: 0;
  color: black;
  font: 400 20rpx "黑体";
}