/* **************************校园论坛样式********************************************** */

.forum_container {
    width: 100%;
    height: 300rpx;
    background-color: #fff;
    /* border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); */
    position: relative;
    overflow: hidden;
  }
  
  .hide {
    display: none;
  }
  
  .forum_container .img {
    height: 60rpx;
    width: 60rpx;
    border-radius: 50%;
    margin: 20rpx 50rpx;
    margin-right: 30rpx;
    overflow: hidden;
    float: left;
  }
  
  .forum_container .title {
    width: 600rpx;
    height: 80rpx;
    margin: 20rpx 50rpx;
    font: 700 45rpx "黑体";
    line-height: 80rpx;
    white-space: nowrap;
    /* 不换行 */
    overflow: hidden;
    /* 超出隐藏 */
    text-overflow: ellipsis;
    /* 超出部分显示省略号 */
  }
  
  .forum_container .label {
    width: 450rpx;
    height: 70rpx;
    margin: 0rpx 50rpx;
    line-height: 70rpx;
    font: 400 35rpx "黑体";
    color: grey;
    white-space: nowrap;
    /* 不换行 */
    overflow: hidden;
    /* 超出隐藏 */
    text-overflow: ellipsis;
    /* 超出部分显示省略号 */
  }
  
  .forum_container .tim {
    position: absolute;
    left: 420rpx;
    top: 225rpx;
    width: 200rpx;
    font: 400 27rpx "黑体";
    color: rgb(163, 178, 184);
  }

  .forum_container .name {
    width: 300rpx;
    font: 400 30rpx "黑体";
    margin-top: 20rpx;
    color: rgba(0,0,0,0.5);
    line-height: 60rpx;
    float: left;    
}


  .tip {
    font: 700 30rpx "黑体";
    text-align: center;
    line-height: 100rpx;
  }