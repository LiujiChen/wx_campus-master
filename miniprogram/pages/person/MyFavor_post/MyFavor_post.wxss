}

.inf {
    width: 100%;
    height: 300rpx;
}


.container .tab {
    width: 310rpx;
    height: 70rpx;
    text-align: center;
    font: 400 30rpx "黑体";
    line-height: 70rpx;
    display: inline-block;
}

/* **************************失物招领样式********************************************** */
.find_container {
    height: 300rpx;
    width: 100%;
    background-color: white;
    /* background:-webkit-linear-gradient(left,	#FFF5EE,pink); */
    /* border-radius: 10rpx; */
    overflow: hidden;
    position: relative;
    /* box-shadow: 3rpx 3rpx 3rpx 3rpx rgba(0, 0, 0, 0.3); */
}

/* 已领取 */
.find_container .recieved {
    position: absolute;
    width: 110rpx;
    height: 110rpx;
}

/* 存放的描述图片 */
.find_container .image {
    height: 240rpx;
    width: 180rpx;
    background-color: white;
    margin: 30rpx 0;
    margin-left: 50rpx;
    margin-right: 10rpx;
    border-radius: 20rpx;
    float: left;
}

/* 说明的一行 */
.find_container .recorder {
    height: 50rpx;
    width: 390rpx;
    margin: 25rpx 10rpx;
    float: left;
}

/* 说明一行的左边小图标 */
.find_container .recorder image {
    width: 30rpx;
    height: 30rpx;
    margin: 10rpx 5rpx;
    margin-top: 20rpx;
    float: left;
}

/* 说明的文字 */
.find_container .recorder .word {
    height: 50rpx;
    width: 330rpx;
    margin: 10rpx 0;
    margin-left: 10rpx;
    font: 700 27rpx "黑体";
    line-height: 50rpx;
    display: inline-block;
}

